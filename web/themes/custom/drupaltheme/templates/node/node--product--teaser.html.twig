
<div class="col">
    <div class="card h-100 first__card">
        <img class="img-fluid card-img-top first__card-img"
             src="{{ content.field_image_product['#items'].entity.fileurl }}"
             alt="{{ content.field_image_product.0['#item'].alt }}">
             
        <div class="card-body d-flex flex-column first__card-body">
            <h5 class="card-title first__card-title">{{ label }}</h5>
            <p class="card-text first__card-description">{{ content.field_description_product }}</p>
            <a href="{{ url }}" class="link-secondary mt-auto stretched-link first__card-link">Watch
                more!</a>
        </div>
    </div>
</div>

